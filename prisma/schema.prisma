generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String   @id
  email                   String   @unique
  password                String
  name                    String
  description             String
  role                    String
  coffeeCounter           Int?
  coffeeExtraction        String?
  coffeeGrinderMachine    String?
  coffeeExtractionMachine String?
  Coffee                  Coffee[]
}

model Coffee {
  id     String @id
  name   String
  origin String
  height Int
  roast  String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
